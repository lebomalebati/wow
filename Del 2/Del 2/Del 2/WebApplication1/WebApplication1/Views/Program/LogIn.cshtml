
@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>

<form>
    <fieldset>
 


        <div class="form-group">
            <label for="exampleInputEmail1">Email/Username</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        

    </fieldset>
    
    <div class="form-group">
        <a class="btn btn-primary" href="@Url.Action("StartPetition","Program")">LogIn</a>
        <a class="btn btn-primary" href="@Url.Action("Index","Program")">Cancel</a><br />
        <br /><span>Don't have an account?</span><a class="btn btn-link" href="@Url.Action("SignUp", "Program")">Sign Up</a>
   </div>

    



</form>




      